<yas>

    <scene root="rootName" axis_length="2"/>

    <views default="viewsName">

        <perspective id="perspectiveID" near="0.1" far="1000.0" angle="60.0">
            <from x="15.0" y="15.0" z="15.0" />
            <to x="0.0" y="0.0" z="0.0" />
        </perspective>

        <!-- <ortho id="orthoID" near="0.1" far="1000.0" left="0.0" right="0.0" top="0.0" bottom="1.0" /> -->

    </views>

    <ambient>
        <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
        <background r="0.7" g="0.9" b="0.96" a="1.0" />
    </ambient>

    <lights>

        <omni id="omniID" enabled="true">
            <location x="1.0" y="1.0" z="5.0" w="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="omniID_1" enabled="true">
            <location x="5.0" y="5.0" z="5.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <!-- <spot id="spotID" enabled="true" angle="60" exponent="1.0">
            <location x="1.0" y="1.0" z="1.0" w="1.0" />
            <target x="1.0" y="1.0" z="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </spot> -->

    </lights>

    <textures>

        <texture id="textureID" file="fileNotFound" />

    </textures>

    <materials>

        <material id="materialID" shininess="1.0">
            <emission r="1.0" g="1.0" b="1.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>


    </materials>

    <transformations>

        <transformation id="tranformationID">
            <translate x="0.0" y="0.0" z="0.0" />
            <rotate axis="x" angle="0" />
            <scale x="1.0" y="1.0" z="1.0" />
            <scale x="1.0" y="1.0" z="1.0" />
        </transformation>

        <transformation id="tranformationID_2">
            <rotate axis="x" angle="0" />
            <translate x="0.0" y="0.0" z="0.0" />
            <scale x="1.0" y="1.0" z="1.0" />
            <scale x="1.0" y="1.0" z="1.0" />
        </transformation>

    </transformations>

    <primitives>

        <primitive id="primitiveID">
            <rectangle x1="1.0" y1="1.1" x2="1.2" y2="1.3" />
        </primitive >

        <primitive id="primitiveID_Sec">
            <triangle x1="1.0" y1="1.0" z1="1.0" x2="1.0" y2="1.0" z2="1.0" x3="1.0" y3="1.0" z3="1.0" />
        </primitive >

    </primitives >

    <components>

        <component id="componentID">

            <transformation>
                <!--<transformationref id="tranformationID" />-->
                
                <translate x="1.0" y="1.0" z="1.0" />
                <rotate axis="x" angle="0.0" />
                <scale x="1.0" y="1.0" z="1.0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>
            
            <texture id="ss" length_s="ff" length_t="ff" />
            
            
            <children>
                <!-- <componentref id="componentID" /> -->
                <primitiveref id="primitiveID" />
            </children> 
            
        </component>

    </components>


</yas>

