<yas>

    <scene root="componentID" axis_length="3"/>

    <views default="perspectiveID">
        <perspective id="perspectiveID" near="0.1" far="500.0" angle="0.4">
            <from x="15.0" y="15.0" z="15.0" />
            <to x="0.0" y="0.0" z="0.0" />
        </perspective>

        <!-- <ortho id="orthoID" near="0.1" far="1000.0" left="0.0" right="0.0" top="0.0" bottom="1.0" /> -->

    </views>

    <ambient>
        <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
        <background r="0.8" g="0.9" b="0.96" a="1.0" />
    </ambient>

    <lights>

        <omni id="omniID" enabled="true">
            <location x="0.0" y="0.0" z="5.0" w="0.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </omni>

        <!-- <spot id="spotID" enabled="true" angle="60" exponent="1.0">
            <location x="1.0" y="1.0" z="1.0" w="1.0" />
            <target x="1.0" y="1.0" z="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </spot> -->

    </lights>

    <textures>

        <texture id="textureID" file="./textures/board.png" />

    </textures>

    <materials>

        <material id="materialID" shininess="10.0">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r=".5" g=".5" b=".5" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </material>


    </materials>

    <transformations>

        <transformation id="tranformationID">
            <translate x="0.0" y="0.0" z="0.0" />
            <rotate axis="x" angle="0" />
            <scale x="1.0" y="1.0" z="1.0" />
            <scale x="1.0" y="1.0" z="1.0" />
        </transformation>

        <transformation id="tranformationID_2">
            <rotate axis="x" angle="0" />
            <translate x="0.0" y="0.0" z="0.0" />
            <scale x="1.0" y="1.0" z="1.0" />
            <scale x="1.0" y="1.0" z="1.0" />
        </transformation>

    </transformations>

    <primitives>
        <primitive id="torus">
            <torus inner="1" outer="1.5" slices="20" loops="20" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="20" stacks="20" />
        </primitive>

        <primitive id="cylinder">
            <cylinder base="2" top="1" height="3" slices="20" stacks="20" />
        </primitive>

        <primitive id="rect">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>

        <primitive id="tri">
            <triangle x1="-1" y1="0" z1="0" x2="1" y2="0" z2="0" x3="0" y3="2" z3="0"/>
        </primitive>
    </primitives >

    <components>

        <component id="componentID">

            <transformation>
                <!--<translate x="0.0" y="0.0" z="1.0" />-->
            </transformation>

            <materials>
                <!-- <material id="inherit" /> -->
                <material id="materialID" />
            </materials>

            <texture id="textureID" length_s="1.0" length_t="1.0" />

            <children>
                <!-- <componentref id="componentID" /> -->
                <primitiveref id="torus" />
            </children>

        </component>

    </components>


</yas>

