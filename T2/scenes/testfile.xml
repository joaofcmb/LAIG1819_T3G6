<yas>
    <scene root="root" axis_length="150"/>

    <views default="DefaultCam">

        <perspective id="DefaultCam" near="0.1" far="500.0" angle="60">
            <from x="0" y="160" z="0" />
            <to x="0" y="0" z="-0.01" />
        </perspective>

        <perspective id="FortZancudo" near="0.1" far="500.0" angle="60">
            <from x="-25" y="3" z="-10" />
            <to x="-37" y="1.5" z="-11.5" />
        </perspective>

        <perspective id="MountainView" near="0.1" far="500.0" angle="60">
            <from x="18" y="2" z="12" />
            <to x="-10" y="4" z="-30" />
        </perspective>

    </views>

    <ambient>
        <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
        <background r="0.7" g="0.9" b="0.96" a="1.0" />
    </ambient>

    <lights>
        <omni id="OmniLight" enabled="1">
            <location x="-50.0" y="100.0" z="-50.0" w="0.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </omni>

    </lights>

    <textures>
        <texture id="gtav-color" file="./scenes/images/gtav-color-4K.png" />
        <texture id="gtav-height" file="./scenes/images/gtav-height-mod.png" />
        <texture id="wave-color" file="./scenes/images/wave-color.jpg" />
        <texture id="ocean-height" file="./scenes/images/ocean-height.png" />        
    </textures>

    <materials>

        <material id="grayMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.38" g="0.38" b="0.36" a="1.0" />
            <diffuse r="0.77" g="0.76" b="0.72" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="whiteMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="redMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.5" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="defaultMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>

    </materials>

    <transformations>

        <transformation id="ballTransform">
            <translate x="15.5" y="0.75" z="-5.75" />
            <scale x="0.75" y="0.75" z="0.75" />
        </transformation>

    </transformations>

    <animations>
        <linear id="zancudo_runway_idle" span="10000">
            <controlpoint xx="-40" yy="1.5" zz="-11" />
            <controlpoint xx="-41" yy="1.5" zz="-11.5" />
        </linear>

        <linear id="zancudo_runway_throttle" span="1750">
            <controlpoint xx="-41" yy="1.5" zz="-11.5" />
            <controlpoint xx="-49.66" yy="1.5" zz="-15.5" />
        </linear>

        
        <linear id="zancudo_runway_takeoff" span="3000">
            <controlpoint xx="-49.66" yy="1.5" zz="-15.5" />
            <controlpoint xx="-69" yy="5" zz="-25.5" />
        </linear>

        <circular id="zancudo_takeoff_turnaround" span="1750" center="-74 5 -16.84" radius="10" startang="60" rotang="210" />

        <linear id="zancudo_to_airfield" span="4000">
            <controlpoint xx="-74" yy="5" zz="-6.84" />
            <controlpoint xx="-35.2" yy="5" zz="-6.84" />
        </linear>

        <circular id="airfield_approach" span="1000" center="-35.2 5 -70.52" radius="63.68" startang="270" rotang="15" />

        <linear id="airfield_descent" span="4000">
            <controlpoint xx="-18.7" yy="5" zz="-9.01" />
            <controlpoint xx="13.7" yy="1.5" zz="-15.7" />
        </linear>
    </animations>

    <primitives>

        <primitive id="test">
            <cylinder base="0.5" top="0.2" height="1.0" slices="20" stacks="20" />
        </primitive >

        <primitive id="plane">
            <plane npartsU="15" npartsV="15" />
        </primitive >

        <primitive id="patch">
            <patch npointsU="3" npointsV="2" npartsU="20" npartsV="20">
                <controlpoint xx="-1.5" yy="-1.5" zz="0.0" />
                <controlpoint xx="-1.5" yy="1.5" zz="0.0" />
                <controlpoint xx="0.0" yy="-1.5" zz="3.0" />
                <controlpoint xx="0.0" yy="1.5" zz="3.0" />
                <controlpoint xx="1.5" yy="-1.5" zz="0.0" />
                <controlpoint xx="1.5" yy="1.5" zz="0.0" />
            </patch>
        </primitive >

        <primitive id="cylinderNurb">
            <cylinder2 base="0.5" top="0.5" height="1.0" slices="20" stacks="20" />
        </primitive >

        <primitive id="terrain">
            <terrain idtexture="gtav-color" idheightmap="gtav-height" parts="250" heightscale="0.1" />
        </primitive >

        <primitive id="water">
            <water idtexture="wave-color" idwavemap="ocean-height" parts="250" heightscale=".4" texscale="50" />
        </primitive >

    </primitives >

    <components>
        <component id="vehicle">
            <transformation>
            </transformation>

            <animations>
                <animationref id="zancudo_runway_idle" />
                <animationref id="zancudo_runway_throttle" />
                <animationref id="zancudo_runway_takeoff" />
                <animationref id="zancudo_takeoff_turnaround" />
                <animationref id="zancudo_to_airfield" />
                <animationref id="airfield_approach" />
                <animationref id="airfield_descent" />
            </animations>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none"/>

            <children>
                <primitiveref id="cylinderNurb" />
            </children>
        </component>

        <component id="root">
            <transformation>
                <!-- <scale x="100" y="100" z="100" /> -->
            </transformation>

            <!-- <animations>
                <animationref id="circularAnimID" />
                <animationref id="linearAnimID" />
                <animationref id="circularAnimID" />
            </animations> -->

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none"/>

            <children>
                <!-- <primitiveref id="test" /> -->
                <!-- <primitiveref id="plane" /> -->
                <!-- <primitiveref id="patch" /> -->
                <!-- <primitiveref id="cylinderNurb" /> -->
                <!-- <primitiveref id="terrain" /> -->
                <componentref id="terrain"/>
                <componentref id="water" />
                <componentref id="vehicle" />
            </children>
        </component>

        <component id="terrain">
            <transformation>
                <scale x="100" y="100" z="100" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none"/>

            <children>
                <primitiveref id="terrain" />
            </children>
        </component>

        <component id="water">
            <transformation>
                <translate x="0" y=".15" z="0" />
                <scale x="100" y="1" z="100" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none"/>

            <children>
                <primitiveref id="water" />
            </children>
        </component>
    </components>

</yas>
