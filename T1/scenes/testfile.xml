<yas>

    <scene root="rootName" axis_length="2"/>

    <views default="viewsName">

        <perspective id="perspectiveID" near="0.1" far="1000.0" angle="60.0">
            <from x="15.0" y="15.0" z="15.0" />
            <to x="0.0" y="0.0" z="0.0" />
        </perspective>

        <!-- <ortho id="orthoID" near="0.1" far="1000.0" left="0.0" right="0.0" top="0.0" bottom="1.0" /> -->

    </views>

    <ambient>
        <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>

        <!-- tt: 0(false) V 1(true) -->

        <omni id="omniID" enabled="1">
            <location x="1.0" y="1.0" z="1.0" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="ss" enabled="tt" angle="ff" exponent="ff">
            <location x="ff" y="ff" z="ff" w=”ff” />
            <target x="ff" y="ff" z="ff" />
            <ambient r="ff" g="ff" b="ff" a="ff" />
            <diffuse r="ff" g="ff" b="ff" a="ff" />
            <specular r="ff" g="ff" b="ff" a="ff" />
        </spot>

    </lights>

</yas>

