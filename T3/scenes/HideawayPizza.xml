<yas>
    <scene root="root" axis_length="1"/>

    <views default="DefaultCam">

        <perspective id="DefaultCam" near="0.1" far="500.0" angle="60">
            <from x="10" y="30" z="15" />
            <to x="10.05" y="0" z="15" />
        </perspective>

    </views>

    <ambient>
        <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
        <background r="0.7" g="0.9" b="0.96" a="1.0" />
    </ambient>

    <lights>
        <omni id="OmniLight" enabled="1">
            <location x="-50.0" y="100.0" z="-50.0" w="0.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="camo" file="./scenes/images/camo.jpg" />
    </textures>

    <materials>
        <material id="defaultMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="none">
            <scale x="1" y="1" z="1" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="plane">
            <plane npartsU="20" npartsV="20" />
        </primitive >
    </primitives >

    <components>

        <component id="root">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

                <texture id="none"/>

            <children>
                <componentref id="outer_structure" />
                <componentref id="inner_structure" />
            </children>
        </component>

            <component id="outer_structure">
                <transformation>
                </transformation>

                <materials>
                    <material id="inherit" />
                </materials>

                <texture id="none"/>

                <children>
                    <componentref id="outer_floor" />
                    <componentref id="outer_walls" />
                    <componentref id="outer_roof" />
                </children>
            </component>

                <component id="outer_floor">
                    <transformation>
                        <translate x="10" y="0" z="15" />
                        <scale x="10" y="1" z="15" />
                    </transformation>

                    <materials>
                        <material id="inherit" />
                    </materials>

                    <texture id="none"/>

                    <children>
                        <primitiveref id="plane" />
                    </children>
                </component>

                    <component id="outer_walls">
                        <transformation>
                        </transformation>

                        <materials>
                            <material id="inherit" />
                        </materials>

                        <texture id="none"/>

                        <children>
                            <componentref id="back_wall"/>
                            <componentref id="right_wall"/>
                            <componentref id="front_wall"/>
                            <componentref id="left_wall"/>
                        </children>
                    </component>

                        <component id="back_wall">
                            <transformation>
                                <translate x="10" y="3.5" z="0" />
                                <scale x="10" y="3.5" z="1" />
                                <rotate axis="x" angle="90" />
                            </transformation>

                            <materials>
                                <material id="inherit" />
                            </materials>

                            <texture id="none"/>

                            <children>
                                <primitiveref id="plane" />
                            </children>
                        </component>

                        <component id="right_wall">
                            <transformation>
                                <translate x="0" y="3.5" z="15" />
                                <scale x="10" y="3.5" z="15" />
                                <rotate axis="z" angle="-90" />
                            </transformation>

                            <materials>
                                <material id="inherit" />
                            </materials>

                            <texture id="none"/>

                            <children>
                                <primitiveref id="plane" />
                            </children>
                        </component>

                        <component id="front_wall">
                            <transformation>
                                <translate x="10" y="3.5" z="30" />
                                <scale x="10" y="3.5" z="1" />
                                <rotate axis="x" angle="-90" />
                            </transformation>

                            <materials>
                                <material id="inherit" />
                            </materials>

                            <texture id="none"/>

                            <children>
                                <primitiveref id="plane" />
                            </children>
                        </component>

                        <component id="left_wall">
                            <transformation>
                                <translate x="20" y="3.5" z="15" />
                                <scale x="10" y="3.5" z="15" />
                                <rotate axis="z" angle="90" />
                            </transformation>

                            <materials>
                                <material id="inherit" />
                            </materials>

                            <texture id="none"/>

                            <children>
                                <primitiveref id="plane" />
                            </children>
                        </component>

                <component id="outer_roof">
                    <transformation>
                        <translate x="10" y="7" z="15" />
                        <scale x="10" y="1" z="15" />
                        <rotate axis="z" angle="180" />
                    </transformation>

                    <materials>
                        <material id="inherit" />
                    </materials>

                    <texture id="none"/>

                    <children>
                        <primitiveref id="plane" />
                    </children>
                </component>
            
            <component id="inner_structure">
                <transformation>
                </transformation>

                <materials>
                    <material id="inherit" />
                </materials>

                <texture id="none"/>

                <children>
                    <componentref id="bar" />
                   <!--  <componentref id="tables" />
                    <componentref id="doors" />
                    <componentref id="windows" />
                    <componentref id="mural" />
                    <componentref id="jukebox" /> -->
                </children>
            </component>
            
                <component id="bar">
                    <transformation>
                    </transformation>

                    <materials>
                        <material id="inherit" />
                    </materials>

                    <texture id="none"/>

                    <children>
                        <componentref id="bar_top" />
                        <!-- <componentref id="bar_entrance" />
                        <componentref id="bar_sides" />
                        <componentref id="bar_chairs" /> -->
                    </children>
                </component>

                    <component id="bar_top">
                        <transformation>
                        </transformation>

                        <materials>
                            <material id="inherit" />
                        </materials>

                        <texture id="none"/>

                        <children>
                            <componentref id="bar_top_main" />
                            <componentref id="bar_top_aux" />
                        </children>
                    </component>

                        <component id="bar_top_main">
                            <transformation>
                                <translate x="5" y="2" z="15" />
                                <scale x="1.25" y="1" z="11.25" />
                            </transformation>

                            <materials>
                                <material id="inherit" />
                            </materials>

                            <texture id="camo" length_s="1.0" length_t="1.0"/>

                            <children>
                                <primitiveref id="plane" />
                            </children>
                        </component>

                        <component id="bar_top_aux">
                            <transformation>
                                <translate x="1.875" y="2" z="25" />
                                <scale x="1.875" y="1" z="1.25" />
                                <rotate axis="y" angle="90" />
                            </transformation>

                            <materials>
                                <material id="inherit" />
                            </materials>

                            <texture id="camo" length_s="1.0" length_t="1.0"/>

                            <children>
                                <primitiveref id="plane" />
                            </children>
                        </component>

    </components>
</yas>