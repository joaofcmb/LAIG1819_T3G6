<yas>
    <scene root="root" axis_length="1"/>

    <views default="DefaultCam">

        <perspective id="DefaultCam" near="0.1" far="500.0" angle="60">
            <from x="3.0" y="3.0" z="3.0" />
            <to x="0.0" y="0.0" z="0.0" />
        </perspective>

    </views>

    <ambient>
        <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
        <background r="0.7" g="0.9" b="0.96" a="1.0" />
    </ambient>

    <lights>
        <omni id="OmniLight" enabled="1">
            <location x="-50.0" y="100.0" z="-50.0" w="0.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </omni>

    </lights>

    <textures>
        <texture id="nurb" file="./scenes/images/nurb.jpg" />
        <texture id="heightmap" file="./scenes/images/heightmap.jpg" />
    </textures>

    <materials>

        <material id="grayMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.38" g="0.38" b="0.36" a="1.0" />
            <diffuse r="0.77" g="0.76" b="0.72" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="whiteMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="redMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.5" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="defaultMaterial" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>

    </materials>

    <transformations>

        <transformation id="ballTransform">
            <translate x="15.5" y="0.75" z="-5.75" />
            <scale x="0.75" y="0.75" z="0.75" />
        </transformation>

    </transformations>

    <animations>

        <linear id="linearAnimID" span="4000">
            <controlpoint xx="0.0" yy="0.5" zz="-1.0" />
            <controlpoint xx="-1.0" yy="0.5" zz="-1.0" />
            <controlpoint xx="-1.0" yy="1.0" zz="0.0" />
            <controlpoint xx="0.0" yy="1.5" zz="1.0" />
            <controlpoint xx="1.0" yy="2.0" zz="0.0" />
            <controlpoint xx="0.0" yy="2.5" zz="-1.0" />
        </linear>

        <circular id="circularAnimID" span="3000" center="0.0 0.5 0.0" radius="1" startang="0" rotang="450" />

    </animations>

    <primitives>

        <primitive id="test">
            <cylinder base="0.5" top="0.2" height="1.0" slices="20" stacks="20" />
        </primitive >

        <primitive id="plane">
            <plane npartsU="15" npartsV="15" />
        </primitive >

        <primitive id="patch">
            <patch npointsU="3" npointsV="2" npartsU="20" npartsV="20">
                <controlpoint xx="-1.5" yy="-1.5" zz="0.0" />
                <controlpoint xx="-1.5" yy="1.5" zz="0.0" />
                <controlpoint xx="0.0" yy="-1.5" zz="3.0" />
                <controlpoint xx="0.0" yy="1.5" zz="3.0" />
                <controlpoint xx="1.5" yy="-1.5" zz="0.0" />
                <controlpoint xx="1.5" yy="1.5" zz="0.0" />
            </patch>
        </primitive >

        <primitive id="cylinderNurb">
            <cylinder2 base="0.5" top="0.5" height="1.0" slices="20" stacks="20" />
        </primitive >

        <primitive id="terrain">
            <terrain idtexture="nurb" idheightmap="heightmap" parts="100" heightscale="2" />
        </primitive >

        <primitive id="water">
            <water idtexture="nurb" idwavemap="heightmap" parts="10" heightscale="2" texscale="1" />
        </primitive >

    </primitives >

    <components>

        <component id="root">
            <transformation></transformation>

            <!-- <animations>
                <animationref id="circularAnimID" />
                <animationref id="linearAnimID" />
                <animationref id="circularAnimID" />
            </animations> -->

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none"/>

            <children>
                <!-- <primitiveref id="test" /> -->
                <!-- <primitiveref id="plane" /> -->
                <!-- <primitiveref id="patch" /> -->
                <!-- <primitiveref id="cylinderNurb" /> -->
                <primitiveref id="terrain" />
                <!-- <primitiveref id="water" /> -->
            </children>
        </component>

    </components>

</yas>
